<div class="row">
  <div class="col-md-12">
    <div class="row">
      <% 
        # binding.pry
        if @posts.empty? %>
      <p>Not found</p>
      <% else %>
      <% @posts.each do |post| %>
      <div class="col-sm-4 col-md-3 col-lg-3">
        <div class="thumbnail" id="image_thumb">
          <%= image_tag post.picture.url,size:'200x100' if post.picture? %>
          <div class="caption phucdine">
            <h4 class="pull-right"><%= post.price %>VND</h4>
            <h4><%= link_to post.title, post %>
            </h4>
            <span class="timestamp">        
            Posted <%= time_ago_in_words(post.created_at) %> ago.
            </span>
          </div>
          <div class="ratings">
            <p class="pull-right"><%= post.commends.count %> Reviews</p>
            <p>
              <!-- <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star-empty"></span> -->
            <td>     
              <i class="glyphicon glyphicon-triangle-top"></i> &nbsp; <%= post.thumbs_up_total %>
              <i class="glyphicon glyphicon-triangle-bottom"></i> &nbsp; <%= post.thumbs_down_total %>
            </td>
            </p>
          </div>
        </div>
      </div>
      <% end %> 
      <% end %>  
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-sm-offset-4">
    <%= will_paginate @posts %>
  </div>
  </div>
</div>
